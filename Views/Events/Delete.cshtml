@model GlsLeague.ViewModel.EventVM

@{
    ViewBag.Title = "Delete";
}




<div>
    <h3>Jesteś pewien, że chcesz to usunąć ?</h3>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nazwa konkurencji:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Event.Name)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Usuń" class="btn btn-danger btn-sm" /> |
            @Html.ActionLink("Wróć", "Index")
        </div>
    }
</div>
